<div class="container">
  
  <div class="row">
    <div class="col-md-12">
      <h2 class="page-header">写真<%= @photoid %></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
        <%= form_tag(photo_delete_url(id: @photoid), :method => :delete) do %>
           <%= submit_tag("削除", :data => {:disable_with => "Deleting..."}, 
           :class => "btn btn-danger") %>
        <% end %>
    </div>
  </div>

  <div class="row top10">
    <div class="col-md-12">
      <dl class="dl-horizontal">
        <dt>アップロード者</dt>
        <dd><%= link_to(@holdername, employees_url(id: @photo.employee.id)) %></dd>
        <dt>写真撮影日時</dt>
        <dd><%= @photo.shotdate.strftime("%Y-%m-%d %H:%M:%S") %></dd>
      </dl>
      <ul class="list-inline">
        <% @tags.each do |t| %>
           <%= link_to(tagphoto_url(tag: t.tag.name)) do %>
           <li><%= t.tag.name %></li>
           <% end %>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row top15">
    <div class="col-lg-12">
      <%= image_tag(photo_show_url(id: @photoid), class: "img-responsive") %>      
    </div>
  </div>
  
</div>
