<div id="legend">
  <legend class="">タグの一覧</legend>
</div>

<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    簡易並び替え <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to '写真枚数が多い順', params.permit(:sort).merge(sort: 'tag_count_desc') %></li>
    <li><%= link_to 'タグの作られた順', params.permit(:sort).merge(sort: 'tag_created_at_desc') %></li>
    <li><%= link_to 'タグの更新があった順', params.permit(:sort).merge(sort: 'tag_updated_at_desc') %></li>
  </ul>
</div>

<ul class="list-group row">
  <% @tags.each do |tag| %>
    <li class="list-group-item col-xs-4" style="border: 0px;"><%= tag.name %> 
      <%= link_to(search_index_path(tag: tag.name)) do %>
	(<%= tag.count %>)
      <% end %>
    </li>
  <% end %>
</ul>
