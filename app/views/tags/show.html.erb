<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="page-header">'<%= @tagname %>' が付けられた写真 <span class="badge"><%= @photo_count %></span></h2>
    </div>
  </div>

  <div class="row">
    <% @photos.each do |p| %>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <%= link_to(photo_view_url(id: p.photo.id), class: "thumbnail") do %>
      <%= image_tag(photo_thumbnail_url(id: p.photo.id), class: "img-responsive", 
          width: 400, height: 300) %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="text-center">   
  <ul class="pagination">
    <% @pages_count.times do |i| %>
    <li><%= link_to(i, tagphoto_page_url(tag: @tagname, page: i), class: "btn btn-default") %></li>
    <% end %>
  </ul>
</div>

</div>
