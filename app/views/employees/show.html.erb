<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2 class="page-header"><%= @employee.nickname %>'s Image Gallery <span class="badge"><%= @photo_count %></span></h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="form-inline form-group">
        <%= submit_tag("ダウンロード", :class => "btn btn-primary", :id => "downloadall") %>
	<% if current_employee.id == @employee.id %>
          <%= submit_tag("一括削除", :class => "btn btn-danger", :id => "deleteall") %>
	<% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-inline form-group">

	<!-- single btn -->
	<div class="btn-group pull-right">
	  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
	    並び替え <span class="caret"></span>
	  </button>
	  <ul class="dropdown-menu" role="menu">
	    <li><%= link_to '撮影日時が新しい順', params.merge(sort: 'desc') %></li>
	    <li><%= link_to '撮影日時が古い順', params.merge(sort: 'asc') %></li>
	  </ul>
	</div>
      </div>
    </div>
  </div>

  <div class="row">
    <% @photos.each do |p| %>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">

      <div id="photo-coner-check-box">
        <div class="checkbox-inline">
          <%= check_box_tag("photo_id[]", p.id) %>
        </div>
      </div>

      <%= link_to(photo_view_url(id: p.id), class: "thumbnail") do %>
	<%= image_tag(photo_thumbnail_url(id: p.id), class: "img-responsive", 
		      width: 400, height: 300) %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="text-center">   
  <ul class="pagination">
    <% @pages_count.times do |i| %>
      <li><%= link_to(i, params.merge(page: i), class: "btn btn-default") %></li>
    <% end %>
  </ul>
</div>

</div>
