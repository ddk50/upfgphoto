 <div class="container">
   <div class="row">
     <div class="col-lg-12">
       <h2 class="page-header"><%= current_employee.nickname %>'s Image Gallery</h2>
     </div>
     <% @photos.each do |p| %>
       <div class="col-lg-3 col-md-4 col-xs-6 thumb">
         <%= link_to("/photo/#{p.id}", class: 'thumbnail') do %>
           <!-- <img class="img-responsive" src="http://placehold.it/400x300" alt=""> -->
           <%= image_tag("/photo/#{p.id}", class: "img-responsive", 
               width: 400, height: 300) %>
         <% end %>
       </div>
     <% end %>
   </div>
 </div>
</div>

