<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header"><%= @employee.nickname %>'s Image Gallery <span class="badge"><%= @photo_count %></span></h2>
  </div>
</div>

<div class="row">
  <%= render 'layouts/photosearchbar' %>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="form-inline form-group">
      <%= submit_tag("ダウンロード", :class => "btn btn-success", :id => "downloadall") %>
      
      <div class="checkbox" style="margin-left:10px; margin-right:10px;">
        <label><input type="checkbox" id="photo_check_group" class="photocheckAll"> 全てにチェックを入れる</label>
      </div>
      
      <div class="pull-right">
        <% if current_employee.id == @employee.id %>
          <%= submit_tag("一括削除", :class => "btn btn-danger", :id => "deleteall") %>
        <% end %>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <hr>
  </div>
</div>

<div class="row">
  <%= render 'layouts/photos', locals: {contents: @photos} %>
</div>

<div class="row">
  <div class="text-center">   
    <%= render 'layouts/pagination', locals: {pages_count: @pages_count, current_page: @current_page} %>
  </div>
</div>

