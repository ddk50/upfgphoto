 <div class="container">
   <div class="row">
     <div class="col-lg-12">
       <h2 class="page-header"><%= @employee.nickname %>'s Image Gallery</h2>
     </div>
     <% @photos.each do |p| %>
       <div class="col-lg-3 col-md-4 col-xs-6 thumb">
         <%= link_to(photo_view_url(id: p.id), class: "thumbnail") do %>
           <%= image_tag(photo_show_url(id: p.id), class: "img-responsive", 
               width: 400, height: 300) %>
         <% end %>
       </div>
     <% end %>
   </div>
 </div>

 <div class="text-center">   
   <ul class="pagination">
     <% @pages_count.times do |i| %>
         <li><%= link_to(i, employees_page_url(id: @employee.id, page: i), class: "btn btn-default") %></li>
     <% end %>
   </ul>
 </div>
 
</div>

